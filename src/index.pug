            p Público-alvo
    //Modal
    #exampleModalCenter.modal.fade(tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true")
      .modal-dialog.modal-dialog-centered(role="document")
        .modal-content
          .modal-header
            h5#exampleModalLongTitle.modal-title Entre em contato comigo
            button.close(type="button" data-dismiss="modal" aria-label="Close")
              span(aria-hidden="true") x
          .modal-body
            form
              .row
                .col
                  label(for="first-name") Digite seu nome
                  input#first-name.form-control(type="text" placeholder="Nome" name="name" required)
              br
              .form-group
                label(for="exampleFormControlInput1") Digite seu e-mail
                input#exampleFormControlInput1.form-control(type="email" name="mail" placeholder="nome@exemplo.com" required)
              .form-group
                label(for="exampleFormControlTextarea1") Mensagem
                textarea#exampleFormControlTextarea1.form-control(rows="3" name="message" placeholder="Digite sua mensagem" required)
          .modal-footer
            input.modal-secondary-button(type="button" data-dismiss="modal" value="Fechar formulário")  
            input.modal-primary-button(type="submit" value="Enviar mensagem")

